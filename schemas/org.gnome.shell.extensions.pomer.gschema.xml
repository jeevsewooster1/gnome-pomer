<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.pomer" path="/org/gnome/shell/extensions/pomer/">
    <key name="time-left" type="i"><default>0</default></key>
    <key name="work-cycle-count" type="i"><default>0</default></key>
    <key name="session-type" type="s"><default>'Work'</default></key>
    <key name="timer-state" type="i"><default>0</default></key>
    <key name="quit-time" type="x"><default>0</default></key>
    <key name="cycles-today" type="i"><default>0</default></key>
    <key name="last-cycle-date" type="s"><default>''</default></key>
    <key name="tasks" type="as"><default>[]</default></key>
    <key name="active-task-id" type="s"><default>''</default></key>
    <key name="completion-history" type="s"><default>"{}"</default></key>

    <key name="work-minutes" type="i">
      <default>25</default>
      <summary>Work duration in minutes</summary>
    </key>
    <key name="short-break-minutes" type="i">
      <default>5</default>
      <summary>Short break duration in minutes</summary>
    </key>
    <key name="long-break-minutes" type="i">
      <default>15</default>
      <summary>Long break duration in minutes</summary>
    </key>
    <key name="cycles-before-long-break" type="i">
      <default>4</default>
      <summary>Work intervals before a long break</summary>
    </key>
    <key name="last-updated" type="x">
      <default>0</default>
      <summary>Timestamp of the last data modification</summary>
    </key>
    <key name="toggle-timer" type="as">
      <default>['&lt;Control&gt;&lt;Alt&gt;p']</default>
      <summary>Shortcut to toggle the timer</summary>
    </key>
  </schema>
</schemalist>
